  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivteplo/utilities.css.git"
  },
  "keywords": [
    "css",
    "utils",
    "utilities",
    "sass",
    "styles",
    "library",
    "style-library",
    "css-library",
    "utility-library"
  ],
  "author": "Ivan Teplov <iteplov7@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ivteplo/utilities.css/issues"
  },
  "homepage": "https://github.com/ivteplo/utilities.css#readme",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "prettier": "^2.8.8",
    "sass": "^1.62.1"
  }
}
