{
  "name": "@ivteplo/utilities.css",
  "version": "1.1.0",
  "description": "CSS library with utility classes",
  "sass": "sources/main.scss",
  "style": "build/main.css",
  "minifiedStyle": "build/main.min.css",
  "files": [
    "build/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build:expanded": "node scripts/build.js expanded",
    "build:compressed": "node scripts/build.js compressed",
    "build": "concurrently npm:build:*",
